<% include ../partials/header %>

    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">

        <form action="/users/<%=user.id%>?_method=PUT method="POST">
            <div class="form-group">
                <label for="editfirst">First Name</label>
                <input class="form-control" id="editfirst" type="text" name="user[firstName]" value="<%=user.firstName %>">
            </div>
            <div class="form-group">
                <label for="editlast">Last Name</label>
                <input class="form-control" id="editlast" type="text" name="user[lastName]" value="<%=user.lastName %>">
            </div>
            <div class="form-group">
                <label for="editemail"> Email</label>
                <input class="form-control" id="editemail" type="email" name="user[email]" value="<%=user.email %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </form>
    </div>
<% include ../partials/footer %>