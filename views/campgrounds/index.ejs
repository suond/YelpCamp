<% include ../partials/header%>


    
    <header class="jumbotron">
        <h1>Welcome to yelp camp!</h1>
        <p>View our handpicked campgrounds from all over the world!</p>
        <p> 
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">create a new campground here </a>
        </p>
        <% if (noMatch == null) { %>
        <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <input type="text" name="search" placeholder="campground search" class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
            </form>
        </p>
        <% } %>
    </header>
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-md-12">   
            <% if(noMatch !== null) {  %>
                <h3><%= noMatch %> </h3>
                <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <input type="text" name="search" placeholder="campground search" class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
            </form>
        </p>
            <%  } %>
                
            
        </div>
        
        
        <% campgrounds.forEach(function(campground) {%>
        <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="img not found">
                    <div class="caption">
                        <h4><%=campground.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
        </div>
    <%  });    %>
    </div><!--row-->
    
    
    
    <% include ../partials/footer %>